<div class="container">
    <div class="row justify-content-md-center">
        <img class="w-75" src="/assets/img/burger.jpeg">
    </div>
    <div class="row justify-content-md-center">
        <h1 class="text-center">Eat Da Burger!</h1>
    </div>
    <div class="row my-4">
        <div class="col-md">
            <ul class="list-group list-group-flush justify-content-md-center">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{id}}. {{burger_name}}
                    <button class="change-devour btn btn-outline-secondary" data-id={{id}}>Devour It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md">
            <ul class="list-group list-group-flush justify-content-md-center">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-light">
                    {{id}}. {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row my-4 d-flex justify-content-center">
        <form class="create-form">
            <div class="form-group">
                <label class="form-label">Enter a burger you want to eat and click the "Submit" button</label>
                <input type="text" class="form-control" id="text-burger" name="name">
            </div>
            <button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>
        </form>
    </div>
</div>
<div class="container">
    <div class="row justify-content-md-center">
        <img class="w-75" src="/assets/img/burger.jpeg">
    </div>
    <div class="row justify-content-md-center">
        <h1 class="text-center">Eat Da Burger!</h1>
    </div>
    <div class="row my-4">
        <div class="col-md">
            <ul class="list-group list-group-flush justify-content-md-center">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{id}}. {{name}}
                    <select>
                        {{#each customers}}
                        <option>
                            {{name}}
                        </option>
                        {{/each}}
                    </select>
                    <button class="change-devour btn btn-outline-secondary" data-id={{id}}>Devour It!</button>
                    Eaten by {{name}}
                </li>
                {{/unless}}
                {{/each}}
            </ul>
            <div class="my-4 d-flex justify-content-center">
                <form class="create-form">
                    <div class="form-group">
                        <label class="form-label">Enter a burger you have</label>
                        <input type="text" class="form-control" id="text-burger" name="name">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Enter the quantity of the burger you have and click the "Submit" button</label>
                        <input type="text" class="form-control" id="text-quantity" name="quantity">
                    </div>
                    <button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>
                </form>
            </div>
        </div>
